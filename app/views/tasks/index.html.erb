<h1>My tasks</h1>

<ul class="mb-3 list-unstyled list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item d-flex align-items-center justify-content-between">
        <div>
          <% if task.completed %>
            <i class="fa-solid fa-square-check"></i>
          <% else %>
            <i class="fa-solid fa-square"></i>
          <% end %>

          <%= task.title %>
        </div>

        <div>
          <%= link_to task_path(task), class: "btn btn-primary" do %>
            <i class="fa-solid fa-eye"></i>
          <% end %>
          <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Delete #{task.title}?" }, class: "btn btn-danger" do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
        </div>
    </li>
  <% end %>
</ul>

<%= link_to new_task_path, class: "text-decoration-none" do %>
  <i class="fa-solid fa-plus"></i> Add a new task
<% end %>
